<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.istrong.tangramandroiddemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.FlowActivity"></activity>
        <activity android:name=".activity.PullLayoutActivity" />
        <activity android:name=".activity.StreamingActivity" />
        <activity android:name=".activity.LayoutActivity" />
        <activity android:name=".activity.TangramRxAsynActivity" />
        <activity android:name=".activity.TangramAsynActivity" />
        <activity android:name=".activity.TypeSelectActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TangramCommonActivity" />
    </application>

</manifest>